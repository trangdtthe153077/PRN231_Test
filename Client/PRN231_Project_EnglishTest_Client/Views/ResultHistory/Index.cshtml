@using PRN231_Project_EnglishTest_Client.DTO.ResultHistory
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "/Pages/Shared/_Layout.cshtml";

    List<ResultHistory> data = ViewBag.ResultHistory;
}

@section content {
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <div class="container-fluid">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title fw-semibold mb-4">Result History</h2>
                    <div class="card">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>No</th>
                                    <th>TestName</th>
                                    <th>Score</th>
                                    <th>StartAt</th>
                                    <th>SubmitAt</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in data)
                                {
                                    <tr>
                                        <td><div class="mt-3 mb-3">@item.No</div></td>
                                        <td><div class="mt-3 mb-3">@item.TestName</div></td>
                                        <td><div class="mt-3 mb-3">@item.Score</div></td>
                                        <td><div class="mt-3 mb-3">@item.StartAt</div></td>
                                        <td><div class="mt-3 mb-3">@item.SubmitAt</div></td>
                                        <td>
                                            <a asp-action="Index" asp-controller="ResultDetail" asp-route-resultid="@item.ResultId" asp-route-userid="@item.Userid" class="btn btn-primary mt-3 mb-3">View Detail</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}