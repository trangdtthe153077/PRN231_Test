@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

@section content {
    <div class="container">
        @if (TempData["signup"] != null)
        {
            <div class="alert alert-info">@TempData["signup"]</div>
        }
        @if (TempData["login"] != null)
        {
            <div class="alert alert-info">@TempData["login"]</div>
        }

        <h2 class="text-lg-start">Login</h2>
        <form method="post" asp-action="PostLogin" asp-controller="Login">
            <div class="form-group">
                <label for="email">Username:</label>
                <input style="width : 50%" type="text" name="email" id="email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input style="width : 50%" type="password" name="password" id="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
            <a asp-controller="SignUp" asp-action="Index" class="btn btn-secondary btn-block">Sign Up</a>
        </form>
    </div>
}